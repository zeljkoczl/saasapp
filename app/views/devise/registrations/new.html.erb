<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <!-- Depending on which plan the user looks at, inject the right title -->
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the pro account and get access to the community and contact information for only $1/month!</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for the basic account and get basic access to the community.</p>
        <% end %>
      </div>
      
      <br>
      
      <!-- Inject either basic or pro form -->
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>